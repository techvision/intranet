- content_for :javascript do
  = javascript_include_tag 'leave_types'
= simple_form_for @leave_type do |f|
  = f.error_notification
  .form-inputs
    = f.input :name
    = f.input :max_no_of_leaves
    = f.input :auto_increament, :label => 'auto increment leaves', :as => :boolean
    = f.input :number_of_leaves
    = f.input :can_apply, :label => "Number of leaves can be applyed"
    = f.input :carry_forward, :as => :boolean

  .form-actions
    = f.button :submit, class: 'btn btn-success'
    = link_to 'Cancel', leave_types_path, class: 'btn btn-danger'

  :javascript
    var leavetype = #{ @leave_type.to_json};
