- content_for :javascript do
  = javascript_include_tag 'user'
.upload
  .form
    %h3 Upload file
    %hr
    - if browser.ie? && browser.version.to_i <=8
      %b This page is not supporting your browser.
    - else
      %i Note:
      %br
      You should download the sample file before uploading your file and make your file acording to that.
      %br
      Once you made it, save that file in CSV format.
      %br
      Download that file from:
      = link_to "Here", '/sam.xlsm'
    %hr
    = simple_form_for @organization, url: upload_csv_path(@organization.id), :method => :put,  html: {:class => 'form-horizontal', :multipart => true} do |f|
      = f.error_notification
      = f.file_field :csv_attachment

      .form-actions
        = f.submit "Upload file", :class => "btn btn-success"
        = link_to "Cancel", users_path, :class => "btn btn-danger"

